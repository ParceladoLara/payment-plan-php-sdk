{
    "name": "parcelado-lara/payment-plan-php",
    "description": "A PHP library for calculating payment plans for Parcelado Lara.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "payment",
        "installment",
        "finance",
        "ffi"
    ],
    "authors": [
        {
            "name": "Parcelado Lara",
            "email": "it-group@lara.app.com"
        }
    ],
    "homepage": "https://github.com/ParceladoLara/payment-plan-php-sdk",
    "require": {
        "php": ">=8.1",
        "ext-ffi": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "ParceladoLara\\PaymentPlan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParceladoLara\\PaymentPlan\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}